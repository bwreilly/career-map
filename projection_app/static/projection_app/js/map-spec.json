{
  "width": 960,
  "height": 500,
  "data": [
    {
      "name": "states",
      "url": "static/projection_app/js/states.json",
      "format": {"type": "topojson", "feature": "states"}
    },
    {
      "name": "projections",
      "url": "api/occupations/?name=Electrical Engineers&format=json",
      "format": {"type": "json", "property": "results"},
      "transform": [
        {
          "type": "zip",
          "key": "data.area_name",
          "with": "states",
          "withKey": "data.properties.state_name",
          "as": "state",
          "default": null
        },
        {"type":"filter", "test":"d.state!=null"}
      ]
    }
  ],
  "scales": [
    {
      "name": "percentchange",
      "type": "quantile",
      "domain": [-20, -10, -5, 0, 5, 10, 20],
      "range": [
        "#FF0D00",
        "#FF1A00",
        "#FF2600",
        "#FF3300",
        "#FF4000",
        "#FF4C00",
        "#FF5900",
        "#FF6600",
        "#FF7300",
        "#FF8000",
        "#FF8C00",
        "#FF9900",
        "#FFA600",
        "#FFB200",
        "#FFBF00",
        "#FFCC00",
        "#FFD900",
        "#FFE600",
        "#FFF200",
        "#FFFF00",
        "#F2FC00",
        "#E6FA00",
        "#D9F700",
        "#CCF500",
        "#BFF200",
        "#B2F000",
        "#A6ED00",
        "#99EB00",
        "#8CE800",
        "#80E600",
        "#73E300",
        "#66E000",
        "#59DE00",
        "#4DDB00",
        "#40D900",
        "#33D600",
        "#26D400",
        "#19D100",
        "#0DCF00",
        "#00CC00"
      ]
    },
    {
      "name": "openings",
      "type": "quantize",
      "domain": {"data": "projections", "field": "data.avgannualopenings"},
      "range":[
        "#E6FAE6",
        "#CCF5CC",
        "#B2F0B2",
        "#99EB99",
        "#80E680",
        "#66E066",
        "#4DDB4D",
        "#33D633",
        "#19D119"
      ]
    }
  ],
  "legends": [
    {
      "fill": "percentchange",
      "title": "Growth (%)",
      "offset": 10,
      "properties": {
        "title": {
          "fontSize": {"value": 14}
        },
        "labels": {
          "fontSize": {"value": 12}
        },
        "gradient": {
          "fillOpacity": {"value": 0.5},
          "stroke": {"value": "transparent"}
        },
        "legend": {
         "stroke": {"value": "#ccc"},
         "strokeWidth": {"value": 1.5}
       }
      }
    }
  ],
  "marks": [
    {
      "type": "path",
      "from": {
        "data": "projections",
        "transform": [{
          "type": "geopath",
          "value": "state.data",
          "projection": "albersUsa"
        }]
      },
      "properties": {
        "enter": { 
          "stroke": {"value": "#fff"},
          "path": {"field": "path"}
        },
        "update": {
          "fill": {
            "scale":"percentchange",
            "field":"data.percentchange"
          },
          "fillOpacity": {"value": 1}
        },
        "hover": {
          "fillOpacity": {"value": 0.5}
        }
      }
    }
  ]
}
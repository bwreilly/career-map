{
  "width": 960,
  "height": 500,
  "data": [
    {
      "name": "states",
      "url": "static/projection_app/js/states.json",
      "format": {"type": "topojson", "feature": "states"}
    },
    {
      "name": "projections",
      "url": "api/occupations/?name=Electrical Engineers&format=json",
      "format": {"type": "json", "property": "results"},
      "transform": [
        {
          "type": "zip",
          "key": "data.area_name",
          "with": "states",
          "withKey": "data.properties.state_name",
          "as": "state",
          "default": null
        },
        {"type":"filter", "test":"d.state!=null"}
      ]
    }
  ],
  "scales": [
    {
      "name": "percentchange",
      "type": "threshold",
      "domain": [-50, -20, -10, -5, -0, 5, 10, 20, 50],
      "range": ["#f7fbff", "#deebf7", "#c6dbef", "#9ecae1", "#6baed6",
                "#4292c6", "#2171b5", "#08519c", "#08306b"]
    },
    {
      "name": "openings",
      "type": "quantize",
      "domain": {"data": "projections", "field": "data.avgannualopenings"},
      "range": ["#f7fbff", "#deebf7", "#c6dbef", "#9ecae1", "#6baed6",
                "#4292c6", "#2171b5", "#08519c", "#08306b"]
    }
  ],
  "marks": [
    {
      "type": "path",
      "from": {
        "data": "projections",
        "transform": [{
          "type": "geopath",
          "value": "state.data",
          "projection": "albersUsa"
        }]
      },
      "properties": {
        "enter": { 
          "stroke": {"value": "#fff"},
          "path": {"field": "path"}
        },
        "update": {
          "fill": {
            "scale":"openings",
            "field":"data.avgannualopenings"
          },
          "fillOpacity": {"value": 1}
        },
        "hover": {
          "fillOpacity": {"value": 0.5}
        }
      }
    }
  ]
}